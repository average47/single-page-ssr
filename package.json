{
  "name": "playground",
  "version": "1.0.0",
  "description": "React SSR with Vite and Express",
  "type": "module",
  "scripts": {
    "dev": "nodemon server-dev.js",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/server.jsx --outDir dist/server",
    "build:api": "vite build --ssr src/api.js --outDir dist/api",
    "build": "npm run build:client && npm run build:server && npm run build:function",
    "serve": "nodemon server-prod.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "nodemon": "^3.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.1.0",
    "vite": "^4.5.0"
  }
}
